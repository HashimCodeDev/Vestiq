# ==============================================
# VESTIQ FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local files to version control

# ==============================================
# API CONFIGURATION
# ==============================================
# Backend API URL (adjust port if backend runs on different port)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# ==============================================
# FIREBASE CLIENT CONFIGURATION
# ==============================================
# Get these from Firebase Console > Project Settings > General > Your apps
# These are safe to expose in the frontend (NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Google Analytics (if implementing analytics)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (for error tracking in production)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# App Environment
# NEXT_PUBLIC_APP_ENV=development

# Feature Flags (if implementing feature toggles)
# NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# These should only be used in development
# Remove or comment out in production

# Enable debug mode
# NEXT_PUBLIC_DEBUG=true

# Mock API responses (for development without backend)
# NEXT_PUBLIC_MOCK_API=false
